<?xml version="1.0" encoding="UTF-8"?><odoo>

<!-- Form & Tree views-->
<!--=======================================================================-->


    <!-- LeafLink Settings Tree -->
    <record model="ir.ui.view" id="leaflink_connector.manager_settings_tree">
      <field name="name">LeafLink Sync Settings Tree</field>
      <field name="model">leaflink.manager.settings</field>
      <field name="arch" type="xml">
        <tree>
            <field name="managed_brand_id"/>
            <field name="active"/>
            <field name="api_id" />
            <field name="orders_sync_freq" />
            <field name="products_sync_freq" />
            <field name="orders_sync_freq" />
            <field name="orders_sync_ts" readonly="1" />
            <field name="products_sync_ts" readonly="1" />
            <field name="partners_sync_ts" readonly="1" />
        </tree>
      </field>
    </record>

    <!-- LeafLink Settings Form -->
    <record model="ir.ui.view" id="leaflink_connector.manager_settings_form">
      <field name="name">LeafLink Sync Settings Form</field>
      <field name="model">leaflink.manager.settings</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group string="Managed Brand">
                    <field name="managed_brand_id"/>
                    <field name="api_id"/>
                </group>
                <group string="Sync Frequency (seconds)">
                    <group>
                        <field name="orders_sync_freq" string="Orders"/>
                    </group>
                    <group>
                        <field name="products_sync_freq" string="Products"/>
                    </group>
                    <group>
                        <field name="partners_sync_freq" string="Partners"/>
                    </group>
                    <group helper="Will skip sync if unchecked">
                        <field name="active"/>
                    </group>
                </group>
                <group>
                    <group string="Sync Last Updated">
                        <field name="orders_sync_ts" readonly="1"/>
                        <field name="products_sync_ts" readonly="1"/>
                        <field name="orders_sync_ts" readonly="1"/>
                    </group>
                </group>
            </sheet>

        </form>
      </field>
    </record>

    <!-- EVD -->

    <!-- LeafLink Brands Tree -->
     <record model="ir.ui.view" id="leaflink_connector.manager_brands_tree">
      <field name="name">LeafLink Brands Tree</field>
      <field name="model">leaflink.manager.brand</field>
      <field name="arch" type="xml">
        <tree>
            <field name="internal_brand_id" />
            <field name="external_id" />
            <field name="external_slug" />
        </tree>
      </field>
    </record>

    <!-- LeafLink Brands Form -->
    <record model="ir.ui.view" id="leaflink_connector.manager_brands_form">
      <field name="name">LeafLink Brands Form</field>
      <field name="model">leaflink.manager.brand</field>
      <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <group>
                        <field name="external_id" />
                    </group>

                    <group>
                        <field name="external_slug" />
                    </group>
                </group>

                <group>
                    <group>
                        <field name="internal_brand_id"/>
                    </group>
                    <group>
                        <field name="internal_vendor_id" />
                    </group>
                    <group>
                        <field name="api_backend" />
                    </group>
                </group>
            </sheet>
        </form>
      </field>
    </record>

    <!-- EVD -->

    <!-- LeafLink API Tree -->
     <record model="ir.ui.view" id="leaflink_connector.manager_api_tree">
      <field name="name">LeafLink API Tree</field>
      <field name="model">leaflink.manager.api</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name" />
            <field name="external_id" />
            <field name="external_slug" />
